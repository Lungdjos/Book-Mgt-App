@page
@model Book_Mgt_App.Pages.Book.EditBookModel
@{
    ViewData["Title"] = "Edit Book";
}

<h1>Edit Book</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Books.Id" />
            <div class="form-group">
                <label asp-for="Books.Title" class="control-label">Title</label>
                <input asp-for="Books.Title" class="form-control" />
                <span asp-asp-validation-for="Books.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.Description" class="control-label">Description</label>
                <input asp-for="Books.Description" class="form-control" />
                <span asp-asp-validation-for="Books.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.Author" class="control-label">Author</label>
                <input asp-for="Books.Author" class="form-control" />
                <span asp-asp-validation-for="Books.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.ISBN" class="control-label">ISBN</label>
                <input asp-for="Books.ISBN" class="form-control" />
                <span asp-asp-validation-for="Books.ISBN" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <a asp-asp-page="./Index" class="btn btn-danger">Back</a>
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Html.RenderPartialAsync("_ValidationScriptsPartial");
}
